# ====================================================================
# Configuration du Serveur Tinode
# ====================================================================

[tinode]
# Le port sur lequel le binaire Tinode écoutera à l'intérieur du conteneur Docker.
# Render le mappera vers le port public (80/443).
listen = "0.0.0.0:6060"

# Les paramètres optionnels de base (vous pouvez les ajuster)
# min_message_length = 1
# max_message_length = 256000

# [log]
# level = 3 # Niveau de verbosité des logs (3 est normal)
# path = "" # Laisser vide pour la sortie standard (stdout/stderr) de Docker

# ====================================================================
# Configuration de la Base de Données (Store)
# ====================================================================

[store]
# Utilisation de l'adaptateur PostgreSQL
use_adapter = "postgres"

[store.adapter.postgres]
